<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B5CAFF"
    tools:context="com.voterguide.DetailPageActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <LinearLayout
            android:id="@+id/basic_details_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="Profile image"
                android:src="@drawable/nophoto" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/candidate_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Joseph D. Kenney (R)"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/candidate_office"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Office: Excutive Councilor"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/candidate_incumbent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Incumbent: Yes"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/candidate_distr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Distr: 1,Albany (Carroll)"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/view_position_view"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/basic_details_holder"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/white_rounded_bg"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/position_value"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="5dp"
                android:text="View positions on issues"
                android:textColor="#000"
                android:textSize="16sp" />

            <Button
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:background="@drawable/forward" />

        </RelativeLayout>

        <TextView
            android:id="@+id/experience_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_position_view"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Experience"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/experience_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/experience_title"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/white_rounded_bg"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/experience_value"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingLeft="0dp"
                android:paddingRight="5dp"
                android:text=" 2008 gubernationatorial candidate, NH senator 2002-2008, NH Representative 1994-2002, lieutenant Colonel U.S. Marine Corps."
                android:textColor="#000" />
        </RelativeLayout>

        <TextView
            android:id="@+id/education_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/experience_view"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Education"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/education_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/education_title"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/white_rounded_bg"
            android:minHeight="60dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/education_value"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:paddingLeft="0dp"
                android:paddingRight="5dp"
                android:text="BA University of NH"
                android:textColor="#000" />
        </RelativeLayout>

        <TextView
            android:id="@+id/family_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/education_view"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Family"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/family_view"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/family_title"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/white_rounded_bg"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/family_value"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:paddingLeft="0dp"
                android:paddingRight="5dp"
                android:text="Married, children:2"
                android:textColor="#000"
                android:textSize="16sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/email_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/family_view"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Email"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/email_view"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/email_title"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/white_rounded_bg"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/email_value"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:paddingLeft="0dp"
                android:paddingRight="5dp"
                android:text="KenneyforNH@gmail.com"
                android:textColor="#000"
                android:textSize="16sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/send_email"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_above="@id/email_view"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="-4dp"
            android:layout_marginRight="70dp"
            android:src="@drawable/message" />

        <ImageView
            android:id="@+id/copy_email"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_above="@id/email_view"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/copy" />

        <TextView
            android:id="@+id/website_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_view"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Website"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/website_view"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@id/website_title"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/white_rounded_bg"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/website_value"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:paddingLeft="0dp"
                android:paddingRight="5dp"
                android:text="http://www.kenneyfornth.com/"
                android:textColor="#000" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/visit_website"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_above="@id/website_view"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="70dp"
            android:src="@drawable/exit" />

        <ImageView
            android:id="@+id/copy_website"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_above="@id/website_view"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/copy" />

        <TextView
            android:id="@+id/phone_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/website_view"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Phone"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/phone_view"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/phone_title"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/white_rounded_bg"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/phone_value"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:paddingLeft="0dp"
                android:paddingRight="5dp"
                android:text="3743333"
                android:textColor="#000"
                android:textSize="16dp" />

            <RelativeLayout
                android:id="@+id/call_button_wrapper"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp" >

                <ImageView
                    android:id="@+id/call_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/phone" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/more_info_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone_view"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:text="More Information"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/view_full_profile_view"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/more_info_title"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/white_rounded_bg"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:paddingLeft="0dp"
                android:paddingRight="5dp"
                android:text="View full profile in the browser"
                android:textColor="#000"
                android:textSize="16sp" />

            <Button
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="2dp"
                android:layout_centerVertical="true"
                android:background="@drawable/forward" />
        </RelativeLayout>

        <TextView
            android:id="@+id/info_quality_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_full_profile_view"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Information Quality"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/info_quality_view"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/info_quality_title"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/white_rounded_bg"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:paddingLeft="0dp"
                android:paddingRight="5dp"
                android:text="Report data errors"
                android:textColor="#000"
                android:textSize="16sp" />

            <Button
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="2dp"
                android:background="@drawable/forward" />
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>